{% extends '@OroUI/actions/update.html.twig' %}
{% import '@OroUI/macros.html.twig' as UI %}

{% oro_title_set({params : {'{{ label }}': entityLabel|trans }}) %}

{% block navButtons %}
    {% import '@OroUI/macros.html.twig' as UI %}

    {{ UI.cancelButton(oro_url_add_query(cancelPath)) }}
    {{ UI.saveAndStayButton({
        'label' : 'oro.entity_merge.form.merge_button'|trans
    }) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% include '@OroUI/page_title_block.html.twig' %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'entity-merge' %}

    {% set dataBlocks = [{
        'title' : 'oro.entity_merge.form.merge_values'|trans,
        'subblocks':
        [
            {
                'title' : null,
                'useSpan': false,
                'data' : [form_widget(form, { 'attr': {'class': 'select2'} })]
            }
        ]
    }] %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock %}
